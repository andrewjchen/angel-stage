#! /usr/bin/env python3
# encoding: utf-8

def options(opt):
    pass

def configure(conf):
    pass

def build(bld):
    bld.program(
                source = 'allegro_main.c', 
                target = 'allegro_main', 
                # use = 'allegro',
                lib = ['allegro'],
                includes = ['.', '/usr/include/',], 
                )
    bld.program(
                source = 'sdl_main.c', 
                target = 'sdl_main', 
                lib = ['SDL'],
                includes = ['.', '/usr/include/',], 
                )
